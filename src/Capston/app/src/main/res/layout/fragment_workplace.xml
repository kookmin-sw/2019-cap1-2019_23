<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".WorkplaceFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/fragment_workspace_profile_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorProflie"
        android:gravity="center">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/fragment_workspace_profile_ImageView"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:src="@mipmap/ic_launcher"
            app:civ_border_color="#FF000000"
            app:civ_border_width="1dp" />
        <TextView
            android:id="@+id/fragment_workspace_nickname_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:text="nickname"
            android:textColor="#ffffff"
            android:textSize="30sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/fragment_workspace_fictionList_TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/fragment_workspace_profile_container"
        android:background="@color/colorfictionList"
        android:gravity="center"
        android:text="내 소설 목록"
        android:textColor="#ffffff"
        android:textSize="20sp" />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_workspace_fictionList_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/fragment_workspace_fictionList_TextView"
        app:layoutManager="android.support.v7.widget.LinearLayoutManager" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/main_writeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#21B3F5"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/round_note_add_white_48"
        android:layout_margin="10dp"/>
</RelativeLayout>