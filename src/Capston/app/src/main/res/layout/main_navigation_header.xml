<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorOrange2"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:src="@mipmap/ic_launcher"
        android:id="@+id/navigation_header_profile_ImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        />

    <TextView
        android:id="@+id/navigation_header_nickname_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="12dp"
        android:text="NickName"
        android:textSize="24sp"
        android:textColor="#000000"/>
    <TextView
        android:id="@+id/navigation_header_email_TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"

        android:layout_marginBottom="8dp"
        android:text="hik@test.com"
        android:textSize="16sp"
        android:textColor="#000000"/>

</LinearLayout>